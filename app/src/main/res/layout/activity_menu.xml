<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rs.petnica.meteorcodegenerator.MenuActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp">
        
        <Spinner
            android:id="@+id/group_dropdown"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:layout_marginBottom="18dp"
            android:background="@color/transparentWhite"
            android:popupBackground="@color/transparentWhite"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="-174dp">
        </Spinner>

        <Button
            android:id="@+id/code_generator_button"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:text="@string/code_generator"
            android:textColor="@color/white"
            android:onClick="codeGenerator"
            android:background="@color/transparentWhite">
        </Button>

    </LinearLayout>

</RelativeLayout>
